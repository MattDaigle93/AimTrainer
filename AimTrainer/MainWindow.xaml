<Window x:Class="AimTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AimTrainer"
        mc:Ignorable="d"
        Title="Aim Trainer C#" Height="450" Width="800">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="ClickOnCanvas" Background="Black" Cursor="Cross">
        <Label Name="txtScore" FontSize="20" FontWeight="Bold" Content="Score: 0" Foreground="White"/>
        <Label Name="txtLastScore" FontSize="20" FontWeight="Bold" Content="Last Score: 0" Foreground="Green" Canvas.Left="126" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Name="txtMisses" FontSize="20" FontWeight="Bold" Content="Misses: 0" Foreground="Crimson" HorizontalAlignment="Left" Canvas.Left="288" VerticalAlignment="Center"/>

        <Rectangle Name="backHealthBar" Stroke="White" Width="350" Height="27" Fill="Red" Canvas.Left="432"/>
        <Rectangle Name="healthBar" Stroke="White" Width="350" Height="27" Fill="Green" Canvas.Left="432"/>
    </Canvas>
</Window>
